    <!-- 검색어 저장: 날짜는 자동으로 검색날짜로 저장 -->
    <insert id="insertKeyword" parameterType="SearchDto">
        INSERT IGNORE INTO SearchRecord (userNumber, searchWord)
        VALUE (#{userNumber}, #{searchWord})
        ON DUPLICATE KEY UPDATE searchDate = now()
    </insert>
</mapper>