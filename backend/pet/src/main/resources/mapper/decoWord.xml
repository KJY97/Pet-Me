<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sns.pet.dao.DecoWordDao">

    <!-- 동물이름 한국명 조회 -->
    <select id="selectKoreanName" resultType="String" parameterType="String">
        SELECT animalName_ko
        FROM Animal
        WHERE animalName_en = #{animalName_en};
    </select>

    <!-- 랜덤으로 꾸미는 말 조회 -->
    <select id="selectDecoWord" resultType="String">
        SELECT word
        FROM DecoWord
        ORDER BY rand() LIMIT 10;
    </select>

</mapper>